<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="USB_Drive_Storage.Views.FilePage">
    <ContentPage.Content>
        <StackLayout>
            <Label x:Name="StatusLabel" Text="Select a file"
                   Padding="30,10,30,10"
                   HorizontalOptions="CenterAndExpand" 
                   FontSize="Medium" />
            <ProgressBar x:Name="UploadProgress" IsVisible="False"/>
            <Button Text="Pick" Clicked="File_Selected_Clicked" x:Name="FileSelectButton"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>